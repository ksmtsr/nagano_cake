<div class="container">
  <div class="row">
    <div class="col-4 mt-5 h2">商品一覧</div>
  </div>
</div>
<div class="row">
    <div class="col-3"></div>
     <div class="col-9"></div>
   <% @items.each do |item| %>
    <div class="">
      <div>
        <% if item.image.attached? %>
        <%= image_tag item.image, size: "200x130" %>
        <% else %>
        <%= image_tag 'no_image', size: "200x130" %>
        <% end %>
        <p><%= item.name %></p>
        <p>¥<%= item.price %></p>
      </div>
    </div>
  <% end %>
</div>
