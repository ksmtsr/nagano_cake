<div class="container">
  <div class="mt-5 mb-5">
    <h3><strong>商品一覧</strong></h3>(全<%= @items.count %>件)
     </div>
       <div class="d-flex flex-row bd-highlight mb-3">
   <% @items.each do |item| %>
    <div class="">
      <div>
        <% if item.image.attached? %>
        <%= image_tag item.image, size: "200x130" %>
        <% else %>
        <%= image_tag 'no_image', size: "200x130" %>
        <% end %>
        <p><%= item.name %></p>
        <p>¥<%= item.price %></p>
      </div>
    </div>
  <% end %>
  </div>
  <%= paginate @items %>
  </div>
