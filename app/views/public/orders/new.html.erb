<div class="container">
   <div class="mt-5 mb-5">
     <headline>注文情報入力</headline>
   </div>
<table class="table table-borderless">
   <%= form_with model: @orders do |f| %>
    <tr>
     <td>
      <strong>支払方法</strong>
     </td>
    </tr>
  <tr>
   <td>
     <%= f.radio_button :payment_method, Order.payment_methods.key(0) %>
      <%= f.label :payment_method_credit_card, Order.payment_methods_i18n[:credit_card] %>
   </td>
  </tr>
  <tr>
    <td><%= f.radio_button :payment_method, Order.payment_methods.key(1) %>
      <%= f.label :payment_method_transfer, Order.payment_methods_i18n[:transfer]%>
    </td>
  </tr>
  <tr>
    <td>
      <strong>お届け先</strong>
      <% end %>
    </td>
  </tr>
  <tr>
   <%= form_with model: @customer do |f| %>
     <td>
        <%= f.radio_button (:address), "customer_address" %>
       <%= f.label :customer_address, "ご自身の住所" %>
     </td>
   </tr>
   <tr>
     <td>
        <%= f.radio_button (:current_customer_address), "current_customer_address" %>
      <%= f.label :current_customer_address, "登録済み住所から選択" %></td>
   </tr>
   <tr>
      <td>
         <%= f.select :address_id, options_from_collection_for_select(Address.all, :id, :address_display) %>
      </td>
   </tr>
   <tr>
      <td>
         <%= f.radio_button (:new_address), "new_address" %>
        <%= f.label :new_address, "新しいお届け先" %>
      </td>
   </tr>
   <tr>
      <td>
       郵便番号(ハイフン無し)
      </td>
      <td>
    <%= f.text_field :postal_code, class: "col-auto", autofocus: true, autocomplete: "postal_code" %></td>
   </tr>
   <tr>
      <td>住所</td>
        <td>
        <%= f.text_field :address, class: "col-auto", autofocus: true, autocomplete: "address" %>
      </td>
    </tr>
  <tr>
<td>宛名</td>
  <td><%= f.text_field :name, class: "col-auto" %></td>
   </tr>
    <% end %>
 </table>
</div>

