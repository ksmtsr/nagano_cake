<div class="container">
  <div class="mt-5 mb-5">
    <headline>注文履歴詳細</headline>
  </div>
<div class="row">
  <div class="col-2">
    <div class="h5 font-weight-bold">購入者</div>
  </div>
<div class="col-8">
  <%=  link_to admin_root_path do %>
    <%= @customer.full_name %>
  <% end %>
  </div>
</div>
<div class="row">
  <div class="col-2">
    <div class="h5 font-weight-bold">注文日</div>
  </div>
  <div class="col-8">
    <%= @order.created_at.strftime('%Y/%m/%d') %>
  </div>
</div>
<div class="row">
  <div class="col-2">
    <div class="h5 font-weight-bold">配送先</div>
  </div>
  <div class="col-8">
    〒<%= @order.postal_code %>
    <%= @order.address %>
    <p><%= @customer.full_name %></p>
  </div>
</div>
<div class="row">
  <div class="col-2">
    <div class="h5 font-weight-bold">支払方法</div>
  </div>
  <div class="col-8">
    <%#= @order.payment_method %>
  </div>
</div>
<div class="row">
  <div class="col-2">
    <div class="h5 font-weight-bold">注文ステータス</div>
  </div>
  <div class="col-8">
    <%= form_with model: @order, url: admin_order_path do |f| %>
<%= f.select :status, { '入金待ち': 0, '入金確認': 1, '製作中': 2, '発送準備中': 3, '発送済み': 4  } %>
<%= f.submit "更新", class:"btn btn-sm btn-success" %>
<% end %>
  </div>
</div>
<table class="table table-sm w-75 mt-5">
  <tr bgcolor="#f5f5f5">
    <th>商品名</th><th>単価(税込)</th>
    <td>数量</td><td>小計</td><td>制作ステータス</td>
  </tr>
  <tr>
    <td><% @order_details.each do |order_detail| %>
      <%= order_detail.item_id.name %>
      <%= order_detail.item_id.name %>
      <%= link_to "更新する", url: admin_order_path, class: "btn　btn-sm btn-success" do %>
      <%= f.select :status, { '制作不可': 0, '制作待ち': 1, '製作中': 2, '制作完了': 3 } %>
      <% end %>
      <% end %></td>
  </tr>
</table>
</div>
