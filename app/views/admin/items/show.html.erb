<div class="container">
  <div class="row">
  <div class="mt-5 mb-5">
  <headline>商品詳細</headline>
  </div>
  </div>
 </div>
<div class="container">
  <div class="row">
  <div class="col-md-6">
  <% if @item.image.attached? %>
    <%= image_tag item.image, size: "200x200" %>
  <% else %>
    <%= image_tag 'no_image', size: "200x200" %>
  <% end %>
   </div>
 <div class="col-md-6">
   <label class="col-sm-6 text-right px-5">商品名</label>
  <%= @item.name %>
  <label class="col-sm-6 text-right px-5">商品説明</label>
  <%= @item.introduction %>
  <label class="col-sm-6 text-right px-5">ジャンル</label>
  <%= @item.genre_id %>
  <label class="col-sm-6 text-right px-5">税込価格(税抜価格)</label>
  <%= @item.price %>
  (<%= @item.with_tax_price %>円)
  <label class="col-sm-6 text-right px-5">販売ステータス</label>
  <% if @item.is_active %>
  販売中
  <% else %>
  販売停止中
  <% end %>
  </div>
  </div>
 </div>