<div class="container">
  <div class="row">
  <div class="mt-5 mb-5">
  <headline>商品詳細</headline>
  </div>
  </div>
 </div>
<div class="container">
    <div class="row justify-content-center">
      <div class="col-3">
  <% if @item.image.attached? %>
    <%= image_tag item.image, size: "200x200" %>
  <% else %>
    <%= image_tag 'no_image', size: "200x200" %>
  <% end %>
   </div>
<div class="col-4">
  <div class="row">
    <div class="col-5">
    商品名
  </div>
<div class="col-7">
  <%= @item.name %>
</div>
  <div class="col-5">
  商品説明
  </div>
<div class="col-7">
  <%= @item.introduction %>
  </div>
  <div class="col-5">
  ジャンル
  </div>
<div class="col-7">
  <%= @item.genre_id %>
</div>
  <div class="col-5">
  税抜価格
  </div>
<div class="col-7">
  <%= @item.price %>
  (<%= @item.with_tax_price %>円)
</div>
  <div class="col-5">
  販売ステータス
  </div>
<div class="col-7">
  <% if @item.is_active %>
  販売中
  <% else %>
  販売停止中
  <% end %>
  </div>
  <div class="mt-4 ml-5">
  <%= link_to "編集する", edit_admin_item_path(@item), class: "btn btn-lg btn-success"  %>
  </div>
  </div>
   </div>
  </div>
</div>
