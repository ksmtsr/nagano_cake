<div class="container">
 <div class="row">
  <div class="col-md-9 px-auto">
   <div class="mt-5 mb-5">
    <headline>商品新規登録</headline>
   </div>
   <%= form_with model: @item, url: admin_items_path do |f| %>
  <div class="d-flex justify-content-center">
 <div class="form-group row">
  <label for="image" class="col-sm-6 text-right px-5">商品画像</label>
    <div class="col-md-6">
     <%= f.file_field :image, accept: "image/*" %>
    </div>
 </div>
  </div>
    <div class="form-group row">
     <label for="name" class="col-sm-6 text-right px-5">商品名</label>
    <div class="col-md-6">
      <%= f.text_field :name %>
    </div>
    </div>
 <div class="form-group row">
  <label for="introduction" class="col-sm-6 text-right px-5">商品説明</label>
    <div class="col-md-6">
      <%= f.text_area :introduction, :size => "30x5"%>
    </div>
 </div>
 <div class="form-group row">
   <label for="genre_id" class="col-sm-6 text-right px-5">ジャンル</label>
    <%= f.select :genre_id, {'ケーキ': 1, 'プリン': 2,'焼き菓子': 3, 'キャンディ': 4}, { include_blank: '--選択してください--'}, { required: true } %>
 </div>
 <div class="form-group row">
   <label for="price" class="col-sm-6 text-right px-5">税抜価格</label>
    <div class="col-md-6">
      <%= f.text_field :price, :placeholder => "1000" %>円
    </div>
 </div>
    <div class="form-group row">
      <label for="is_active" class="col-sm-6 text-right px-5">販売ステータス</label>
      <div class="col-md-6">
      <%= f.radio_button :is_active, :true %>
      <label>販売中</label>
      <%= f.radio_button :is_active, :false %>
      <label>販売停止中</label>
      </div>
    </div>
   <div class="text-center">
<%= f.submit "新規登録", class: "btn btn-success btn-lg" %>
   </div>


<% end %>
<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
<script>
$(function(){
  $('.dropdown-menu .dropdown-item').click(function(){
    var visibleItem = $('.dropdown-toggle', $(this).closest('.dropdown'));
    visibleItem.text($(this).attr('value'));
  });
});
</script>